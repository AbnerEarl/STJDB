<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.stjdb.ReceiveSong">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过本首"
        android:id="@+id/button46"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推迟演唱"
        android:id="@+id/button47"
        android:layout_above="@+id/button46"
        android:layout_alignRight="@+id/button46"
        android:layout_alignEnd="@+id/button46"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始演唱"
        android:id="@+id/button48"
        android:layout_above="@+id/button47"
        android:layout_alignLeft="@+id/button47"
        android:layout_alignStart="@+id/button47"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂时还没有收到歌单！你也可以返回到点歌界面先给某个ta点一首！"
        android:id="@+id/textView28"
        android:textColor="#060404"
        android:lines="9"
        android:textSize="24sp"
        android:layout_above="@+id/button48"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="90dp" />
</RelativeLayout>
