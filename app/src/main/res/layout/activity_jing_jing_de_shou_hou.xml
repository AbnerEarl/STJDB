<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.stjdb.JingJingDeShouHou">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="给ta点歌"
        android:id="@+id/button42"
        android:textSize="30dp"
        android:layout_alignBaseline="@+id/button43"
        android:layout_alignBottom="@+id/button43"
        android:layout_toLeftOf="@+id/space7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="给ta闹钟"
        android:id="@+id/button40"
        android:textSize="30dp"
        android:textColor="#2f8994"
        android:layout_alignBaseline="@+id/button41"
        android:layout_alignBottom="@+id/button41"
        android:layout_toLeftOf="@+id/space7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写给未来"
        android:id="@+id/button41"
        android:textSize="30dp"
        android:textColor="#824c0a"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/space7"
        android:layout_toEndOf="@+id/space7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收到点歌"
        android:id="@+id/button43"
        android:textSize="30dp"
        android:textColor="#0d5da4"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/button41"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/space7"
        android:layout_toEndOf="@+id/space7" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="温馨提示：以上功能的使用，需要首先添加逗友，否则可能显示报错！" />
</RelativeLayout>
